# Library Management System

class Library:
    def __init__(self):
        # Dictionary to store books: {title: [author, copies]}
        self.books = {
            "Python Basics": ["John Smith", 3],
            "Data Science 101": ["Jane Doe", 2],
            "Machine Learning": ["Andrew Ng", 1]
        }

    # Display all books
    def display_books(self):
        print("\nüìö Available Books:")
        for title, details in self.books.items():
            author, copies = details
            print(f"Title: {title}, Author: {author}, Copies: {copies}")

    # Borrow a book
    def borrow_book(self, title):
        if title in self.books:
            if self.books[title][1] > 0:
                self.books[title][1] -= 1
                print(f"\n‚úÖ You borrowed '{title}'. Enjoy reading!")
            else:
                print(f"\n‚ùå Sorry, '{title}' is not available right now.")
        else:
            print("\n‚ùå Book not found in library.")

    # Return a book
    def return_book(self, title):
        if title in self.books:
            self.books[title][1] += 1
            print(f"\nüì• You returned '{title}'. Thank you!")
        else:
            print("\n‚ùå This book does not belong to our library.")


# Main Program
def main():
    library = Library()

    while True:
        print("\n=== Library Menu ===")
        print("1. Display Books")
        print("2. Borrow Book")
        print("3. Return Book")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ")

        if choice == "1":
            library.display_books()
        elif choice == "2":
            title = input("Enter the book title you want to borrow: ")
            library.borrow_book(title)
        elif choice == "3":
            title = input("Enter the book title you want to return: ")
            library.return_book(title)
        elif choice == "4":
            print("\nüëã Exiting... Thank you for visiting the library!")
            break
        else:
            print("\n‚ùå Invalid choice. Please try again.")

# Run the program
main()
